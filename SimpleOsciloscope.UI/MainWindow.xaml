<Window x:Class="SimpleOsciloscope.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleOsciloscope.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="71*"/>
            <ColumnDefinition Width="729*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="206*"/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="5" TextWrapping="Wrap" Text="Smaples" />
        <TextBlock HorizontalAlignment="Left" Margin="5" TextWrapping="Wrap" Text="{Binding TotalSamplesStr}" Grid.Column="1"/>

    </Grid>
</Window>
