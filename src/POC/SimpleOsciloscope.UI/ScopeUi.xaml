<Window x:Class="SimpleOsciloscope.UI.ScopeUi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleOsciloscope.UI"
        mc:Ignorable="d"
        Title="ScopeUi" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Border Margin="5" Grid.ColumnSpan="2" BorderBrush="Gray" BorderThickness="2" >
            <Image Source="{Binding BitmapSource}" />
        </Border>

        <TextBlock Text="Signal Frequency:" Grid.Column="0" Margin="5" Grid.Row="1"/>
        <TextBlock Text="{Binding Frequency}" Grid.Column="1" Margin="5" Grid.Row="1"/>
        <TextBlock Text="Sample Rate (Sps):" Grid.Column="0" Margin="5" Grid.Row="2"/>
        <TextBlock Text="{Binding SampleRate}" Grid.Column="1" Margin="5" Grid.Row="2"/>


    </Grid>
</Window>
